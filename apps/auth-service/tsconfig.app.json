{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "../../",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "allowImportingTsExtensions": true
  },
  // "allowImportingTsExtensions": true,
  "include": [
    "src/**/*.ts",
    "../../packages/**/*.ts",
    "../../packages/**/*.js"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
